<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="50dp"
    tools:context="com.kgfsl.ecampusstudent.Activity.ForgotPasswordActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Enter Your Phone Number"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/colorTextPrimary" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="You'll get a code via SMS"
            android:textColor="@color/colorSecondaryPrimaryText" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/n_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@drawable/edit_default"
                    android:inputType="number"
                    android:maxLength="1"
                    android:minEms="2"
                    android:textColor="@color/colorTextPrimary" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/n_2"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@drawable/edit_default"
                    android:inputType="number"
                    android:maxLength="1"
                    android:minEms="2"
                    android:textColor="@color/colorTextPrimary" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/n_3"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@drawable/edit_default"
                    android:inputType="number"
                    android:maxLength="1"
                    android:minEms="2"
                    android:textColor="@color/colorTextPrimary" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/n_4"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@drawable/edit_default"
                    android:inputType="number"
                    android:maxLength="1"
                    android:minEms="2"
                    android:textColor="@color/colorTextPrimary" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/n_5"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@drawable/edit_default"
                    android:inputType="number"
                    android:maxLength="1"
                    android:minEms="2"
                    android:textColor="@color/colorTextPrimary" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/n_6"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@drawable/edit_default"
                    android:inputType="number"
                    android:maxLength="1"
                    android:minEms="2"
                    android:textColor="@color/colorTextPrimary" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/n_7"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@drawable/edit_default"
                    android:inputType="number"
                    android:maxLength="1"
                    android:minEms="2"
                    android:textColor="@color/colorTextPrimary" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/n_8"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@drawable/edit_default"
                    android:inputType="number"
                    android:maxLength="1"
                    android:minEms="2"
                    android:textColor="@color/colorTextPrimary" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/n_9"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@drawable/edit_default"
                    android:inputType="number"
                    android:maxLength="1"
                    android:minEms="2"
                    android:textColor="@color/colorTextPrimary" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/n_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@drawable/edit_default"
                    android:inputType="number"
                    android:maxLength="1"
                    android:minEms="2"
                    android:textColor="@color/colorTextPrimary" />
            </LinearLayout>

        </LinearLayout>

        <EditText

            android:id="@+id/pin_hidden_edittext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@null"
            android:cursorVisible="false"
            android:gravity="center_horizontal"
            android:maxLength="10"
            android:textColor="@color/colorBackground" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/opt_tc"
            android:textColor="@color/colorTextPrimary" />

        <Button
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:background="@color/colorAccent"
            android:text="NEXT"
            android:textColor="@color/colorTextPrimary" />



    </LinearLayout>
</LinearLayout>
