<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBackground"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorSecondaryPrimaryText"></View>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/colorSecondaryPrimaryText"></Button>

        <LinearLayout
            android:id="@+id/linearsub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearmark"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent" android:background="@color/colorSecondaryPrimaryText"></View>

        </LinearLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/colorSecondaryPrimaryText"></View>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorSecondaryPrimaryText"></View>

</LinearLayout>